# Binance API (optional for public data)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Redis
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# Symbols to track
SYMBOLS=BTCUSDT,ETHUSDT

# Performance tuning
CACHE_TTL_SEC=300
REPORT_WINDOW_SEC=1800
FLOW_WINDOW_SEC=30

# Consumer configuration
CONSUMER_GROUP=context8
STREAM_KEY=nt:binance

# Observability
LOG_LEVEL=info
PROMETHEUS_PORT=9090

# Thresholds for anomaly detection
WALL_THRESHOLD_MULTIPLIER=1.5
VACUUM_THRESHOLD_PERCENTILE=10

# Traefik Configuration
# Email for Let's Encrypt certificates
ACME_EMAIL=admin@context8.markets

# Traefik dashboard basic auth (generate with: htpasswd -nb admin password)
# Example: admin:$apr1$xyz... (keep the $ signs escaped in docker-compose if needed)
TRAEFIK_BASIC_AUTH=

# Traefik log level (DEBUG, INFO, WARN, ERROR)
TRAEFIK_LOG_LEVEL=INFO
